<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiGlance.DesktopShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiGlance"
    xmlns:viewModels="clr-namespace:MauiGlance.ViewModels"
    x:DataType="viewModels:ShellViewModel"
    Shell.FlyoutBehavior="Locked">

    <FlyoutItem Title="{Binding Docs.Title}"  FlyoutDisplayOptions="AsSingleItem" SemanticProperties.Hint="{Binding Docs.Hint}">
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}"/>
        </Tab>
    </FlyoutItem>
    <FlyoutItem Title="{Binding Demos.Title}" SemanticProperties.Hint="{Binding Demos.Hint}">
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}" Route="demos" />
        </Tab>
    </FlyoutItem>
    <FlyoutItem Title="{Binding Samples.Title}" SemanticProperties.Hint="{Binding Samples.Hint}">
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}" Route="samples" />
        </Tab>
    </FlyoutItem>
    <FlyoutItem Title="{Binding Settings.Title}" SemanticProperties.Hint="{Binding Settings.Hint}">
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}" Route="settings"/>
        </Tab>
    </FlyoutItem>
    
</Shell>